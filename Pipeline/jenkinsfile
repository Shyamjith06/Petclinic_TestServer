node {
     
  stage('Git-Checkout') {
   git 'https://github.com/Shyamjith06/Petclinic_TestServer.git'
  }
   

stage('Geting Ready for Docker-Stage-Deployment') {
    def server= Artifactory.server 'Artifactory'
        def downloadSpec = """{
            "files": [{
            "pattern": "petclinic-1/petclinic.war",
            "target": "petclinic/" }]
        }"""
    server.download(downloadSpec)  



 }
 def project_path="petclinic"
 
 dir(project_path) {
  
 
   stage('Docker-Stage-Deployment') {
   sh label: '', script: 'docker-compose up -d --build'
  }
  }
 stage('Production - Provisioning Approval') {
  	input "Start provisioning the production server?"
  }
  stage('Downstream Build -- terraform')
  {
	 build 'Infrastructure'
	}
  }


